apiVersion: v1
kind: List
items:
  - apiVersion: policy/v1
    kind: PodDisruptionBudget
    metadata:
      name: {{ app_ns }}-pdb-min
      namespace: {{ app_ns }}
    spec:
      minAvailable: 1
      selector:
        matchLabels:
          app: test
  - apiVersion: policy/v1
    kind: PodDisruptionBudget
    metadata:
      name: {{ app_ns }}-pdb-max
      namespace: {{ app_ns }}
    spec:
      maxUnavailable: 1
      selector:
        matchLabels:
          app: test
